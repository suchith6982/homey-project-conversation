<div class="container">
  <div class="header-row" style="margin-bottom: 16px;">
    <h1 style="margin:0;">Sign up</h1>
    <%= link_to "Back", new_user_session_path, class: "btn btn-secondary" %>
  </div>

  <div class="card">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" style="min-width:100%;">
        <%= f.label :email, class: "muted" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com" %>
      </div>

      <div class="field" style="min-width:100%; margin-top: 12px;">
        <%= f.label :password, class: "muted" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••" %>
        <% if @minimum_password_length %>
          <div class="muted"><%= @minimum_password_length %> characters minimum</div>
        <% end %>
      </div>

      <div class="field" style="min-width:100%; margin-top: 12px;">
        <%= f.label :password_confirmation, class: "muted" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••" %>
      </div>

      <div style="margin-top: 14px;">
        <%= f.submit "Create account", class: "btn" %>
      </div>
    <% end %>

    <div style="margin-top: 14px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
