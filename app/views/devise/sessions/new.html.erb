<div class="container">
  <div class="header-row" style="margin-bottom: 16px;">
    <h1 style="margin:0;">Log in</h1>
    <%= link_to "Back", root_path, class: "btn btn-secondary" %>
  </div>

  <div class="card">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field" style="min-width:100%;">
        <%= f.label :email, class: "muted" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com" %>
      </div>

      <div class="field" style="min-width:100%; margin-top: 12px;">
        <%= f.label :password, class: "muted" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div style="margin-top: 12px;">
          <label class="muted">
            <%= f.check_box :remember_me %>
            Remember me
          </label>
        </div>
      <% end %>

      <div style="margin-top: 14px;">
        <%= f.submit "Log in", class: "btn" %>
      </div>
    <% end %>

    <div style="margin-top: 14px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
